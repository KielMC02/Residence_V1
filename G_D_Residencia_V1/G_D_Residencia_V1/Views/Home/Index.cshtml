@{
    ViewBag.Title = "Home Page";
}

<link href="~/Content/estilos.css" rel="stylesheet" />


<!--CAROUSEL-->
<div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active bg-primary"></li>
        <li data-target="#carouselExampleCaptions" data-slide-to="1" class="bg-primary"></li>
        <li data-target="#carouselExampleCaptions" data-slide-to="2" class="bg-primary"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Imagenes/slider1.jpg" class="d-block w-100" style="opacity:0.9">
        </div>
        <div class="carousel-item">
            <img src="~/Imagenes/slider2.jpg" class="d-block w-100" style="opacity:0.9">
        </div>
        <div class="carousel-item">
            <img src="~/Imagenes/slider1.jpg" class="d-block w-100" style="opacity:0.9">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<hr />
<!--SERVICES-->
<section class="container-fluid servicios" style="margin-bottom: 3em">
    <div class="container text-center w-50 text-dark">
        <h2 class="py-3 mb-5 text-uppercase font-weight-bold text-primary">Servicios</h2>
    </div>
    <div class="card-deck">
        <!--SERVICIO #1-->
        <div class="card">
            <div class="card-body text-center shadow-sm">
                <img src="~/Imagenes/residence.png" width="50" />
                <h5 class="card-title mt-3">Residencia</h5>
                <p class="card-text">En este módulo el usuario realizará la solicitud de estancia.</p>
                <a href="#" class="btn  btn-sm btn-primary">Ver módulo</a>
            </div>
        </div>
        <!--SERVICIO #2-->
        <div class="card">
            <div class="card-body text-center shadow-sm">
                <img src="~/Imagenes/averias.png" width="50" />
                <h5 class="card-title mt-3">Averías</h5>
                <p class="card-text">En este módulo el usuario podrá reportar averías encontradas dentro de los edificios.</p>
                <a href="#" class="btn  btn-sm btn-primary">Ver módulo</a>
            </div>
        </div>
        <!--SERVICIO #3-->
        <div class="card">
            <div class="card-body text-center shadow-sm">
                <img src="~/Imagenes/washing-machine.png" width="50" />
                <h5 class="card-title mt-3">Lavado</h5>
                <p class="card-text">En este módulo el usuario podrá visualizar los días asignados al lavado clasificado por género.</p>
                <a href="#" class="btn  btn-sm btn-primary">Ver módulo</a>
            </div>
        </div>
        <!--SERVICIO #4-->
        <div class="card">
            <div class="card-body text-center shadow-sm">
                <img src="~/Imagenes/exit.png" width="50" />
                <h5 class="card-title mt-3">Salidas</h5>
                <p class="card-text">En este módulo el usuario hará una solicitud de salida temporal o definitiva.</p>
                <a href="#" class="btn  btn-sm btn-primary">Ver módulo</a>
            </div>
        </div>
    </div>
</section>