@model G_D_Residencia_V1.Models.SOLICITUD_ESTANCIA

@{
    ViewBag.Title = "Editar solicitud de residencia";
}

<div class="container mb-4">
    <div class="mt-4">
        <h4 class="text-uppercase font-weight-bold text-primary">
            Solicitud de residencia
        </h4>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-">
            <small>Aquí puedes editar la solicitud de residencia</small>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.id_solicitud)

		    <div class="row">
				<div class="col-lg-5">
                    <div class="form-group">
                        @Html.LabelFor(model => model.id_usuario, "Creado por", htmlAttributes: new { @class = "control-label" })
                        <div class="">
                            @Html.DropDownList("id_usuario", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.id_usuario, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="form-group">
                        @Html.LabelFor(model => model.estado_solicitud, "Estado de solicitud", htmlAttributes: new { @class = "control-label" })
                        <div class="">
                            @Html.EditorFor(model => model.estado_solicitud, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.estado_solicitud, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.motivo_solicitud, "Motivo de solicitud", htmlAttributes: new { @class = "control-label" })
                        <div class="">
                            @Html.EditorFor(model => model.motivo_solicitud, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.motivo_solicitud, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
			<br />  
			<div class="row">
				<div class="col-lg-5">
                    <div class="form-group">
                        @Html.LabelFor(model => model.fecha_solicitud, "Fecha de solicitud", htmlAttributes: new { @class = "control-label" })
                        <div class="">
                            @Html.EditorFor(model => model.fecha_solicitud, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.fecha_solicitud, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="form-group">
                        @Html.LabelFor(model => model.fecha_respuesta, "Fecha de respuesta", htmlAttributes: new { @class = "control-label" })
                        <div class="">
                            @Html.EditorFor(model => model.fecha_respuesta, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.fecha_respuesta, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
			<br />
			<div class="row">
				<div class="col-lg-5">
                    <div class="form-group">
                        @Html.LabelFor(model => model.seguro_medico, "Seguro médico", htmlAttributes: new { @class = "control-label" })
                        <div class="">
                            @Html.EditorFor(model => model.seguro_medico, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.seguro_medico, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
				<div class="col-lg-5">
                    <div class="form-group">
                        @Html.LabelFor(model => model.carta_conducta, "Carta de conducta", htmlAttributes: new { @class = "control-label" })
                        <div class="">
                            @Html.EditorFor(model => model.carta_conducta, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.carta_conducta, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="form-group">
                        @Html.LabelFor(model => model.cedula, "Cédula", htmlAttributes: new { @class = "control-label" })
                        <div class="">
                            @Html.EditorFor(model => model.cedula, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.cedula, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group mt-4">
                <div class="col-md-offset-2 col-md-10">
                   @Html.ActionLink("Volver", "Index")
                   <input type="submit" value="Guardar" class="ml-2 btn btn-primary" />
                </div>
            </div>
        </div>
    }


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>