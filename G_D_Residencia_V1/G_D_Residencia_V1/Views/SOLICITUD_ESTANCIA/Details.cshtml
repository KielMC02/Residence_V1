@model G_D_Residencia_V1.Models.SOLICITUD_ESTANCIA

@{
    ViewBag.Title = "Detalles de solicitud";
}

    <div class="container mb-5">
        <div class="mt-4">
            <h4 class="text-uppercase font-weight-bold text-primary">
                @ViewBag.Title
            </h4>
            <small>Información de solicitud</small>
            <hr />
        </div>


		<div class="row">
			<div class="col-lg-5 mt-5 ml-5 mx-auto">
				<img src="~/Imagenes/request.png" alt="SolicitudIcon" width="330" />
            </div>

            <div class="col-lg-5 mt-5">
                <div class="dl-horizontal">

					<div class="row">
                        <div class="col-lg-6">
                            <h6>Creado por: </h6>
                            @Html.DisplayFor(model => model.USUARIO.nombres)
                        </div>
                        <div class="col-lg-6">
                            <h6>Estado de solicitud:</h6>
                            @Html.DisplayFor(model => model.estado_solicitud)
                        </div>
                    </div>
					<br /><br />

					<div class="row">
                        <div class="col-lg-12">
                            <h6>Motivo de la solicitud: </h6>
                            @Html.DisplayFor(model => model.motivo_solicitud)
                        </div>
                    </div>
					<br /><br />

					<div class="row">
                        <div class="col-lg-6">
                            <h6>Fecha de solicitud: </h6>
                            @Html.DisplayFor(model => model.fecha_solicitud)
                        </div>
                        <div class="col-lg-6">
                            <h6>Fecha de respuesta: </h6>
                            @Html.DisplayFor(model => model.fecha_respuesta)
                        </div>
                    </div>
					<br /><br />   

				    <div class="row">
                        <div class="col-lg-6">
                            <h6>Seguro médico: </h6>
                            @Html.DisplayFor(model => model.seguro_medico)
                        </div>
						<br />
                        <div class="col-lg-6">
                            <h6>Carta conducta: </h6>
                            @Html.DisplayFor(model => model.carta_conducta)
                        </div>
						<br />
                        <div class="col-lg-6 mt-2">
                            <h6>Cédula: </h6>
                            @Html.DisplayFor(model => model.cedula)
                        </div>
                    </div>

                </div>
                <p class="mt-4">
                    @Html.ActionLink("Editar", "Edit", new { id = Model.id_solicitud }) &nbsp; | &nbsp;
                    @Html.ActionLink("Volver", "Index")
                </p>
            </div>

        </div>

        
</div>