@model G_D_Residencia_V1.Models.REPORTES_AVERIAS

@{
    ViewBag.Title = "Editar reporte de avería";
}

<div class="container mb-5">
    <div class="mt-4">
        <h4 class="text-uppercase font-weight-bold text-primary">
            Reporte de avería
        </h4>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <small>Aquí puedes modificar el reporte realizado</small>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.id_averia)

		    <div class="row">
                <div class="col-lg-5">
                    <div class="form-group">
                        @Html.LabelFor(model => model.id_usuario, "Creado por", htmlAttributes: new { @class = "control-label" })
                        <div class="">
                            @Html.DropDownList("id_usuario", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.id_usuario, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="form-group">
                        @Html.LabelFor(model => model.status, "Status", htmlAttributes: new { @class = "control-label" })
                        <div class="">
                            @Html.EditorFor(model => model.status, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
				<br />
                <div class="col-lg-5">
                    <div class="form-group">
                        @Html.LabelFor(model => model.descripcion_averia, "Descripción", htmlAttributes: new { @class = "control-label" })
                        <div class="">
                            @Html.EditorFor(model => model.descripcion_averia, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.descripcion_averia, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
			<br />
            <div class="row">
                <div class="col-lg-5">
                    <div class="form-group">
                        @Html.LabelFor(model => model.fecha_solicitud, "Fecha de solicitud", htmlAttributes: new { @class = "control-label" })
                        <div class="">
                            @Html.EditorFor(model => model.fecha_solicitud, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.fecha_solicitud, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="form-group">
                        @Html.LabelFor(model => model.fecha_respuesta, "Fecha de respuesta", htmlAttributes: new { @class = "control-label" })
                        <div class="">
                            @Html.EditorFor(model => model.fecha_respuesta, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.fecha_respuesta, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        
            <div class="form-group mt-4">
                <div class="col-md-offset-2 col-md-10">
                    @Html.ActionLink("Volver", "Index")
                    <input type="submit" value="Guardar" class="ml-2 btn btn-primary" />
                </div>
            </div>
        </div>
    }

   

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>